<!DOCTYPE html>
<html lang="en" class="light-style layout-wide customizer-hide" dir="ltr" data-theme="theme-default" data-assets-path="<%= assetsUrl %>" data-template="horizontal-menu-template">
  <head>
    <%- include('../_layouts/elements-head') %>

    <!-- Vendor CSS -->

    <!-- Page CSS -->
    
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../_layouts/elements-menu-admin') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <%- include('../_layouts/elements-navbar') %>
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="py-3 mb-4"><span class="text-muted fw-light">Dasbor /</span> Home</h4>
              
              <div class="row">
                <!-- Cards with few info -->
                <div class="col-lg-3 col-sm-6 mb-4">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                      <div class="card-title mb-0">
                        <h5 class="mb-0 me-2 totalBookings">0</h5>
                        <small>Total Pesanan</small>
                      </div>
                      <div class="card-icon">
                        <span class="badge bg-label-primary rounded-pill p-2">
                          <i class='ti ti-shopping-cart ti-sm'></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6 mb-4">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                      <div class="card-title mb-0">
                        <h5 class="mb-0 me-2 approvedBookings">0</h5>
                        <small>Pesanan di terima</small>
                      </div>
                      <div class="card-icon">
                        <span class="badge bg-label-success rounded-pill p-2">
                          <i class='ti ti-check ti-sm'></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6 mb-4">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                      <div class="card-title mb-0">
                        <h5 class="mb-0 me-2 rejectedBookings">0</h5>
                        <small>Pesanan di tolak</small>
                      </div>
                      <div class="card-icon">
                        <span class="badge bg-label-danger rounded-pill p-2">
                          <i class='ti ti-x ti-sm'></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6 mb-4">
                  <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                      <div class="card-title mb-0">
                        <h5 class="mb-0 me-2 pendingBookings">0</h5>
                        <small>Pesanan tertunda</small>
                      </div>
                      <div class="card-icon">
                        <span class="badge bg-label-warning rounded-pill p-2">
                          <i class='ti ti-clock ti-sm'></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <!--/ Cards with few info -->
              </div>
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <%- include('../_layouts/elements-footer') %>
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->
    
    <!-- Core JS -->
    <%- include('../_layouts/elements-js') %>

    <!-- Vendors JS -->
    
    <!-- Page JS -->
    <script src="/assets/js/pages-dashboard-admin.js"></script>
    
  </body>
</html>