<!DOCTYPE html>
<html lang="en" class="light-style layout-wide customizer-hide" dir="ltr" data-theme="theme-default" data-assets-path="<%= assetsUrl %>" data-template="horizontal-menu-template">
  <head>
    <%- include('../_layouts/elements-head') %>

    <!-- Vendor CSS -->

    <!-- Page CSS -->
    
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('../_layouts/elements-menu-admin') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <%- include('../_layouts/elements-navbar') %>
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="py-3 mb-4"><span class="text-muted fw-light">Dasbor /</span> Riwayat Pesanan</h4>

              <!-- Borderless Table -->
              <div class="card mt-3 card-table">
                <h5 class="card-header">Riwayat Pesanan Kendaraan</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th>Kendaraan</th>
                        <th>Supir</th>
                        <th>Mulai tanggal</th>
                        <th>Tanggal Berakhir</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% dataBookings.forEach(booking => { %>
                        <tr>
                          <td><%= booking.vehicle.name %></td>
                          <td><%= booking.driver.name %></td>
                          <td><%= new Date(booking.startDate).toLocaleDateString() %></td>
                          <td><%= new Date(booking.endDate).toLocaleDateString() %></td>
                          <td><span class="badge bg-label-<%= booking.status === 'approved' ? 'success' : booking.status === 'pending' ? 'warning' : 'danger' %> me-1"><%= booking.status.toUpperCase() %></span></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Borderless Table -->
              
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <%- include('../_layouts/elements-footer') %>
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->
    
    <!-- Core JS -->
    <%- include('../_layouts/elements-js') %>

    <!-- Vendors JS -->
    
    <!-- Page JS -->
    
  </body>
</html>